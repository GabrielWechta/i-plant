<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IPlant" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorButtonNormal">@color/pink</item>
        <item name="android:textColor">@color/text_green</item>
        <item name="colorBackgroundFloating">@color/coral</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/cucumber</item>
        <item name="colorOnPrimary">@color/text_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/coral</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/cucumber</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ActivityHeader">
        <item name="android:fontFamily">@font/merriweather_bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/text_green</item>
    </style>

    <style name="word_title">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>
</resources>